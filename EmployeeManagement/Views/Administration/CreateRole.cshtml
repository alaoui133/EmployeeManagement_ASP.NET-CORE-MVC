@model AdministrationCreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
}

<div class="text-center">
    Create New Role
</div>

<form method="post">


    <div class="form-row">
        <div class="form-group">
            <label asp-for="RoleName"></label>
            <input class="form-control" asp-for="RoleName">
            <span asp-validation-for="RoleName" hidden class="small text-danger"></span>

        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary"> Add Role Name </button>
    </div>


    <div class="text text-danger" asp-validation-summary="All"></div>

</form>
