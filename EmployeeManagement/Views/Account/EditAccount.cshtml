@model EditAccountViewModel
@{
    ViewBag.Title = "Edit Account";
}

<div class="text-center">
    Edit Account
</div>

<form asp-action="EditAccount" asp-controller="Account" method="post">


    <input  class="form-control" asp-for="Id" hidden>


    <div class="form-row">
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input type="text" class="form-control" asp-for="FirstName">
            <span asp-validation-for="FirstName" class="small text-danger"></span>
        </div>

    </div>
    <div class="form-row">
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input type="text" class="form-control" asp-for="LastName">
            <span asp-validation-for="LastName" class="small text-danger"></span>

        </div>
    </div>

    <div class="form-row">
        <div class="form-group">
            <label asp-for="Age"></label>
            <input type="number" class="form-control" asp-for="Age">
            <span asp-validation-for="Age" class="small text-danger"></span>

        </div>
    </div>



    <div class="form-row">
        <div class="form-group">
            <label asp-for="Password"></label>
            <input type="password" class="form-control" asp-for="Password">
            <span asp-validation-for="Password" class="small text-danger"></span>

        </div>
    </div>
    <div class="form-row">
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input type="password" class="form-control" asp-for="ConfirmPassword">
            <span asp-validation-for="ConfirmPassword" class="small text-danger"></span>

        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary"> Validate </button>
    </div>


    <div class="text text-danger" asp-validation-summary="All"></div>

</form>




