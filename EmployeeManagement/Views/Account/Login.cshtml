@model AccountLoginViewModel

@{
    ViewBag.Title = "Register";
}

<div class="text-center">
    Registration Form
</div>

<form   method="post">


    <div class="form-row">
        <div class="form-group">
            <label asp-for="EmailAdress"></label>
            <input  class="form-control" asp-for="EmailAdress">
            <span asp-validation-for="EmailAdress" hidden class="small text-danger"></span>

        </div>
    </div>

    <div class="form-row">
        <div class="form-group">
            <label asp-for="Password"></label>
            <input type="password" class="form-control" asp-for="Password">
            <span asp-validation-for="Password" hidden class="small text-danger"></span>

        </div>
    </div>

    <div class="form-row">
        <div class="form-group">
            <label asp-for="Remember"></label>
            <input type="checkbox" class="custom-checkbox" asp-for="Remember">

        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary"> Login </button>
    </div>


    <div class="text text-danger" asp-validation-summary="All"></div>

</form>
