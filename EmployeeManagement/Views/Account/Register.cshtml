@model AccountRegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="text-center">
    Registration Form
</div>

<form enctype="multipart/form-data" asp-action="Register" asp-controller="Account" method="post">

    <div class="form-row">
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input type="text" class="form-control" asp-for="FirstName">
            <span asp-validation-for="FirstName"  class="small text-danger"></span>
        </div>

    </div>
    <div class="form-row">
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input type="text" class="form-control" asp-for="LastName">
            <span asp-validation-for="LastName"  class="small text-danger"></span>

        </div>
    </div>

    <div class="form-row">
        <div class="form-group">
            <label asp-for="EmailAdress"></label>
            <input type="text" class="form-control" asp-for="EmailAdress">
            <span asp-validation-for="EmailAdress"  class="small text-danger"></span>

        </div>
    </div>

    <div class="form-row">
        <div class="form-group">
            <label asp-for="Password"></label>
            <input type="password" class="form-control" asp-for="Password">
            <span asp-validation-for="Password"  class="small text-danger"></span>

        </div>
    </div>
    <div class="form-row">
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input type="password" class="form-control" asp-for="ConfirmPassword">
            <span asp-validation-for="ConfirmPassword"  class="small text-danger"></span>

        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary"> Validate </button>
    </div>


    <div class="text text-danger" asp-validation-summary="All"></div>

</form>



    
